<div class="row">
    <form method="post" action="{{ action }}">
        <div class="form-group col-md-12">
            <label class="control-label">Primeiro nome</label>
            <input class="form-control" type="text" placeholder="Primeiro nome"
                   name="first_name" value="{{ user.first_name }}" required>
        </div>
        <div class="form-group col-md-12">
            <label class="control-label">Último nome</label>
            <input class="form-control" type="text" placeholder="Último nome"
                   name="last_name" value="{{ user.last_name }}" required>
        </div>
        <div class="form-group col-md-12">
            <label class="control-label">E-mail</label>
            <input class="form-control" type="text" placeholder="E-mail"
                   name="email" value="{{ user.email }}" required>
        </div>
        {% if user.id is null %}
        <div class="form-group col-md-12">
            <label class="control-label">Password</label>
            <input class="form-control" type="password" placeholder="Senha"
                   name="password" required>
        </div>
        {% endif %}


        <div class="col-md-12">
            <hr/>
        </div>
        <div class="form-group col-md-2">
            <a href="{{ route('users.list') }}" class="btn btn-default btn-block">
                <span class="glyphicon glyphicon-backward"></span> Cancelar
            </a>
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-danger btn-block">
                <span class="glyphicon glyphicon-{{ submitIcon }}"></span> Salvar
            </button>
        </div>
    </form>
</div>