{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-defaulr">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-th-large"></span> Detalhes da  conta a pagar: <small>#{{ pay.name }}</small>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('pays.list') }}"
                               class="btn btn-default">
                                <span class="glyphicon glyphicon-backward"></span> Cancelar
                            </a>
                            <a href="{{ route('pays.edit',{'id': pay.id}) }}"
                               class="btn btn-primary">
                                <span class="glyphicon glyphicon-pencil"></span> Editar
                            </a>
                            <a href="{{ route('pays.delete',{'id': pay.id}) }}"
                               class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Excluir
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th class="col-md-2 text-right">ID</th>
                                    <td>{{ pay.id }}</td>
                                </tr>
                                <tr>
                                    <th class="col-md-2 text-right">Categoria de Custo</th>
                                    <td>{{ pay.category.name }}</td>
                                </tr>
                                <tr>
                                    <th class="col-md-2 text-right">Data Lanc.</th>
                                    <td>{{ pay.date_launch | date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th class="col-md-2 text-right">Nome</th>
                                    <td>{{ pay.name }}</td>
                                </tr>
                                <tr>
                                    <th class="col-md-2 text-right">Valor</th>
                                    <td>{{ pay.value | number_format(2,',','.') }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}