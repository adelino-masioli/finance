<div class="row">
    <form method="post" action="{{ action }}">
        <div class="form-group col-md-12">
            <label class="control-label">Categoria</label>
            <select class="form-control" name="category_id" required>
                {% for category in categories %}
                    <option value="{{ category.id }}"
                            {{ pay.category_id is not null and pay.category_id == category.id?'selected="selected"':'' }}>
                        {{ category.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-12">
            <label class="control-label">Data prevista</label>
            <input class="form-control date-format" type="text" placeholder="DD/MM/YYYY"
                   name="date_launch" value="{{ pay.date_launch | date('d/m/Y') }}" required>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Descrição</label>
            <input class="form-control" type="text" placeholder="Descrição"
                   name="name" value="{{ pay.name }}" required>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Valor</label>
            <input class="form-control money" type="text" placeholder="0.000,00"
                   name="value" value="{{ pay.value ? pay.value | number_format(2,',','.') : '' }}" required>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Status</label>
            <select class="form-control" name="status" required>
                <option value="1" {{ pay.status is not null and pay.status == 1?'selected="selected"':'' }}>Aberto</option>
                <option value="2" {{ pay.status is not null and pay.status == 2?'selected="selected"':'' }}>Fechado</option>
            </select>
        </div>


        <div class="col-md-12">
            <hr/>
        </div>
        <div class="form-group col-md-2">
            <a href="{{ route('pays.list') }}" class="btn btn-default btn-block">
                <span class="glyphicon glyphicon-backward"></span> Cancelar
            </a>
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-danger btn-block">
                <span class="glyphicon glyphicon-{{ submitIcon }}"></span> Salvar
            </button>
        </div>
    </form>
</div>