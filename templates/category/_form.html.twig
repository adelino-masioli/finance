<div class="row">
    <form method="post" action="{{ action }}">
        <div class="form-group col-md-12">
            <label class="control-label">Categoria</label>
            <input class="form-control" type="text" placeholder="Categoria" required
                   name="name" value="{{ category.name }}">
        </div>
        <div class="form-group col-md-12">
            <label class="control-label">Descrição</label>
            <textarea class="form-control"  name="description" id="" cols="30" rows="6" placeholder="Descrição" required>{{ category.description }}</textarea>
        </div>

        <div class="col-md-12">
            <hr/>
        </div>
        <div class="form-group col-md-2">
            <a href="{{ route('category.list') }}" class="btn btn-default btn-block">
                <span class="glyphicon glyphicon-backward"></span> Cancelar
            </a>
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-danger btn-block">
                <span class="glyphicon glyphicon-{{ submitIcon }}"></span> Salvar
            </button>
        </div>
    </form>
</div>