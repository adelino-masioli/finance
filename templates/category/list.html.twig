{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-th-large"></span> Administração de categorias
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('category.new') }}" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus"></span> Nova
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th class="col-md-1 text-center">ID</th>
                                    <th class="col-md-10 text-center">CATEGORIA</th>
                                    <th class="col-md-1 text-center">AÇÕES</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td class="text-center">{{ category.id }}</td>
                                        <td>{{ category.name }}</td>
                                        <td class="text-center">
                                            <a href="{{ route('category.edit',{'id': category.id}) }}" class="btn btn-sm btn-default">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            <a href="{{ route('category.show',{'id': category.id}) }}" class="btn btn-sm btn-default">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}